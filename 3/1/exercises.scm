(define (make-accumulator total)
  (lambda (amount)
    (set! total (+ total amount))
    total))

; 2)
(define (make-monitored f)
  (let ((calls 0))
    (lambda args
      (if (and (not (null? args))
               (eq? 'how-many-calls? (car args)))
        calls
        (begin
          (set! calls (+ calls 1)) 
          (apply f args))))))

